{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",

        "strict": true,
        "sourceMap": false,
        "removeComments": false,
        "declaration": true,
        "declarationMap": false,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
}
